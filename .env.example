# SpeedBet Arena Environment Configuration
# Copy this file to .env.local and fill in your values

# === LINERA CONFIGURATION ===
# Application ID (obtained after deploying to testnet)
VITE_APP_ID=your_application_id_here

# Chain ID (your personal chain ID from the faucet)
VITE_CHAIN_ID=your_chain_id_here

# Linera Wallet endpoint
VITE_LINERA_WALLET_URL=http://localhost:9081

# === NETWORK CONFIGURATION ===
# Conway testnet faucet URL
LINERA_FAUCET_URL=https://faucet.testnet-conway.linera.net

# GraphQL endpoint
VITE_GRAPHQL_ENDPOINT=http://localhost:8080/graphql

# === FRONTEND CONFIGURATION ===
# Development server port
VITE_PORT=8080

# API polling interval (milliseconds)
VITE_POLL_INTERVAL=1000

# === ORACLE CONFIGURATION ===
# Price feed API (for demo, can use CoinGecko free tier)
PRICE_API_URL=https://api.coingecko.com/api/v3/simple/price

# === DEBUG ===
# Enable verbose logging
VITE_DEBUG=false
